<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/easy_race_lap_timer_logo_1"
        android:id="@+id/imageView"
        android:contentDescription="@string/application_logo"
        android:cropToPadding="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/session_name"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/session"
        android:textStyle="normal|italic"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:background="@android:color/holo_orange_light"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:name="Title"
        android:textSize="30sp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/title"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        android:background="@android:color/holo_orange_light"
        android:layout_alignBaseline="@+id/session"
        android:layout_alignBottom="@+id/session"
        android:layout_toRightOf="@+id/session"
        android:layout_toEndOf="@+id/session" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/session"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/connectionControl"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:background="@android:color/holo_orange_light" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:id="@+id/text_raw_view"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        tools:ignore="RtlHardcoded"
        android:layout_below="@+id/connectionControl"
        android:layout_alignLeft="@+id/text_raw_view"
        android:layout_alignStart="@+id/text_raw_view" />


</RelativeLayout>