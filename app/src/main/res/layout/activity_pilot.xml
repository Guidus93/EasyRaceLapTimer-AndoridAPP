<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:text="@string/session_name"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/session_pilot"
        android:textStyle="normal|italic"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:background="@android:color/holo_orange_light"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/easy_race_lap_timer_logo_1"
        android:id="@+id/imageView3"
        android:contentDescription="@string/application_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:name="Title"
        android:textSize="30sp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/title_pilot"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        android:background="@android:color/holo_orange_light"
        android:layout_alignBaseline="@+id/session_pilot"
        android:layout_alignBottom="@+id/session_pilot"
        android:layout_toRightOf="@+id/session_pilot"
        android:layout_toEndOf="@+id/session_pilot" />

</RelativeLayout>
